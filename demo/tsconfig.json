{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/",
		"sourceMap": true,
		"esModuleInterop": true,
		// "noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"lib": ["es5", "es6", "dom"],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": [
        "./src/**/*"
    ],
	"awesomeTypescriptLoaderOptions": {
		"reportFiles": [
            "./src/**/*"
        ]
	}
}
